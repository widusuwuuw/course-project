    "uric_acid": {
      "name": "尿酸",
      "name_en": "Uric Acid",
      "unit": "μmol/L",
      "reference_limit": 420,
      "gender_specific": {
        "male": {
          "normal_range": [200, 420],
          "high_threshold": 420,
          "description": "男性尿酸正常范围"
        },
        "female": {
          "normal_range": [140, 350],
          "high_threshold": 350,
          "description": "女性尿酸正常范围"
        }
      },
      "conditions": [
        {
          "operator": "gt",
          "value": 420,
          "condition_type": "high",
          "status": "abnormal",
          "risk_level": "moderate",
          "abnormal_tag": "Hyperuricemia",
          "message": "尿酸偏高，可能导致痛风风险",
          "recommendations": [
            "减少高嘌呤食物摄入（动物内脏、海鲜、啤酒等）",
            "增加水分摄入，每日建议2000-3000ml",
            "控制体重，适度运动",
            "避免饮酒，特别是啤酒",
            "定期复查尿酸水平"
          ]
        }
      ]
    },
    "alt": {
      "name": "谷丙转氨酶",
      "name_en": "Alanine Aminotransferase (ALT)",
      "unit": "U/L",
      "reference_limit": 40,
      "gender_specific": {
        "default": {
          "normal_range": [0, 40],
          "high_threshold": 40,
          "description": "谷丙转氨酶正常范围"
        }
      },
      "conditions": [
        {
          "operator": "gt",
          "value": 40,
          "condition_type": "high",
          "status": "abnormal",
          "risk_level": "high",
          "abnormal_tag": "Elevated_ALT",
          "message": "谷丙转氨酶升高，可能提示肝脏损伤",
          "recommendations": [
            "避免饮酒，戒烟",
            "均衡饮食，减少油腻食物",
            "保证充足睡眠，避免熬夜",
            "适度运动，控制体重",
            "及时就医进行肝功能全面检查",
            "检查是否有病毒性肝炎、脂肪肝等肝脏疾病"
          ]
        }
      ]
    },
