import React, { useState, useEffect } from 'react';
import {
  View,
  Text,
  ScrollView,
  StyleSheet,
  TouchableOpacity,
  StatusBar,
  Dimensions,
} from 'react-native';
import { NativeStackScreenProps } from '@react-navigation/native-stack';
import { RootStackParamList } from '../../App';
import AsyncStorage from '@react-native-async-storage/async-storage';
import {
  Activity,
  Heart,
  Brain,
  TrendingUp,
  Zap,
  Shield,
  Settings,
  Bell,
  User,
  Calendar,
  Clock,
} from 'lucide-react-native';

// 导入我们的Web3组件
import { Web3BackgroundSimple } from '@/components/Web3UI/Web3BackgroundSimple';
import { GlassCard } from '@/components/Web3UI/GlassCard';
import { NeonCard } from '@/components/Web3UI/NeonCard';
import { Web3Progress } from '@/components/Web3UI/Web3Progress';
import { Web3Badge } from '@/components/Web3UI/Web3Badge';
import { Web3StatsCard } from '@/components/Web3UI/Web3StatsCard';

const { width } = Dimensions.get('window');

type Props = NativeStackScreenProps<RootStackParamList, 'Dashboard'>;

export default function ModernDashboard({ navigation }: Props) {
  const [timeOfDay, setTimeOfDay] = useState('');
  const [healthScore] = useState(94);

  useEffect(() => {
    const hour = new Date().getHours();
    if (hour < 12) setTimeOfDay('早上好');
    else if (hour < 18) setTimeOfDay('下午好');
    else setTimeOfDay('晚上好');
  }, []);

  const logout = async () => {
    await AsyncStorage.removeItem('token');
    navigation.replace('Login');
  };

  // 主要健康指标
  const healthMetrics = [
    {
      id: 1,
      title: '心率',
      value: '72',
      unit: 'bpm',
      icon: Heart,
      gradient: ['#FF6B6B', '#FF5252'],
      status: 'normal',
      change: '+2%',
    },
    {
      id: 2,
      title: '血氧',
      value: '98',
      unit: '%',
      icon: Activity,
      gradient: ['#4ECDC4', '#44A08D'],
      status: 'excellent',
      change: '+0.5%',
    },
    {
      id: 3,
      title: '睡眠质量',
      value: '8.2',
      unit: '小时',
      icon: Brain,
      gradient: ['#6C5CE7', '#5F3DC4'],
      status: 'good',
      change: '+12%',
    },
    {
      id: 4,
      title: '活动量',
      value: '8,432',
      unit: '步',
      icon: TrendingUp,
      gradient: ['#00B894', '#00A085'],
      status: 'active',
      change: '+15%',
    },
  ];

  // 快速操作
  const quickActions = [
    {
      id: 1,
      title: 'AI健康助手',
      description: '智能健康咨询',
      icon: Brain,
      color: '#6C5CE7',
      onPress: () => navigation.navigate('ModernAssistant'),
    },
    {
      id: 2,
      title: '健康记录',
      description: '查看历史数据',
      icon: Calendar,
      color: '#4ECDC4',
      onPress: () => navigation.navigate('HealthLogs'),
    },
  ];

  return (
    <Web3BackgroundSimple>
      <StatusBar barStyle="light-content" backgroundColor="#0A0B0D" />

      <ScrollView
        style={styles.container}
        contentContainerStyle={styles.contentContainer}
        showsVerticalScrollIndicator={false}
      >
        {/* 顶部导航栏 */}
        <View style={styles.navBar}>
          <View style={styles.navLeft}>
            <View style={styles.userAvatar}>
              <User size={20} color="#FFFFFF" />
            </View>
            <View>
              <Text style={styles.greeting}>{timeOfDay}</Text>
              <Text style={styles.userName}>Alex Chen</Text>
            </View>
          </View>

          <View style={styles.navRight}>
            <TouchableOpacity style={styles.iconButton}>
              <Bell size={20} color="#9CA3AF" />
            </TouchableOpacity>
            <TouchableOpacity style={styles.iconButton} onPress={logout}>
              <Settings size={20} color="#9CA3AF" />
            </TouchableOpacity>
          </View>
        </View>

        {/* 健康评分卡片 */}
        <GlassCard style={styles.scoreCard}>
          <View style={styles.scoreContent}>
            <View style={styles.scoreLeft}>
              <Text style={styles.scoreLabel}>健康评分</Text>
              <Text style={styles.scoreValue}>{healthScore}</Text>
              <Web3Progress
                value={healthScore}
                max={100}
                variant="neon"
                color={['10B981', '#059669']}
                size="sm"
                showLabel={false}
                style={{ marginBottom: 12 }}
              />
              <View style={styles.scoreBadges}>
                <Web3Badge variant="neon" size="sm">
                  <Shield size={12} color="#10B981" /> 健康
                </Web3Badge>
                <Web3Badge variant="glass" size="sm" style={{ marginLeft: 8 }}>
                  <Zap size={12} color="#F59E0B" /> 活跃
                </Web3Badge>
              </View>
            </View>
          </View>
        </GlassCard>

        {/* 实时监测 */}
        <View style={styles.section}>
          <Text style={styles.sectionTitle}>实时监测</Text>
          <Text style={styles.sectionSubtitle}>上次更新: 2分钟前</Text>
        </View>

        <View style={styles.metricsGrid}>
          {healthMetrics.map((metric) => {
            const IconComponent = metric.icon;
            return (
              <Web3StatsCard
                key={metric.id}
                title={metric.title}
                value={metric.value}
                unit={metric.unit}
                change={{
                  value: metric.change,
                  trend: metric.status === 'excellent' ? 'up' : 'neutral',
                }}
                icon={
                  <View style={styles.metricIcon}>
                    <IconComponent size={20} color="#FFFFFF" />
                  </View>
                }
                gradient={metric.gradient}
                variant="glass"
                size="md"
                style={styles.metricCard}
              />
            );
          })}
        </View>

        {/* 快速操作 */}
        <View style={styles.section}>
          <Text style={styles.sectionTitle}>快速操作</Text>
          <Text style={styles.sectionSubtitle}>常用功能</Text>
        </View>

        <View style={styles.actionsGrid}>
          {quickActions.map((action) => {
            const IconComponent = action.icon;
            return (
              <TouchableOpacity
                key={action.id}
                style={[styles.actionCard, { borderColor: action.color + '30' }]}
                onPress={action.onPress}
                activeOpacity={0.8}
              >
                <View style={[styles.actionIcon, { backgroundColor: action.color }]}>
                  <IconComponent size={24} color="#FFFFFF" />
                </View>
                <Text style={styles.actionTitle}>{action.title}</Text>
                <Text style={styles.actionDescription}>{action.description}</Text>
              </TouchableOpacity>
            );
          })}
        </View>

        {/* 今日概览 */}
        <GlassCard style={styles.overviewCard}>
          <View style={styles.overviewHeader}>
            <View style={styles.overviewTime}>
              <Clock size={16} color="#9CA3AF" />
              <Text style={styles.overviewTimeText}>今日概览</Text>
            </View>
          </View>

          <View style={styles.overviewStats}>
            <View style={styles.overviewStat}>
              <Text style={styles.overviewStatValue}>8,432</Text>
              <Text style={styles.overviewStatLabel}>步数</Text>
            </View>
            <View style={styles.overviewDivider} />
            <View style={styles.overviewStat}>
              <Text style={styles.overviewStatValue}>324</Text>
              <Text style={styles.overviewStatLabel}>卡路里</Text>
            </View>
            <View style={styles.overviewDivider} />
            <View style={styles.overviewStat}>
              <Text style={styles.overviewStatValue}>45</Text>
              <Text style={styles.overviewStatLabel}>运动分钟</Text>
            </View>
          </View>
        </GlassCard>
      </ScrollView>
    </Web3BackgroundSimple>
  );
}

