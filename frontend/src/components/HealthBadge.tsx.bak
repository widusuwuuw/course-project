import React from 'react';
import {
  View,
  Text,
  StyleSheet,
  TouchableOpacity,
  ViewStyle,
  Animated,
} from 'react-native';
import { LinearGradient } from 'expo-linear-gradient';

// Badge variants for health metrics and achievements
export type BadgeVariant =
  | 'success'     // Green for healthy metrics
  | 'warning'     // Orange for attention needed
  | 'danger'      // Red for critical issues
  | 'info'        // Blue for information
  | 'achievement' // Purple/gold for achievements
  | 'primary'     // Main brand color
  | 'secondary'   // Secondary color
  | 'outline';    // Transparent with border

export type BadgeSize = 'small' | 'medium' | 'large';

interface HealthBadgeProps {
  text: string;
  variant?: BadgeVariant;
  size?: BadgeSize;
  onPress?: () => void;
  style?: ViewStyle;
  leftIcon?: React.ReactNode;
  rightIcon?: React.ReactNode;
  animated?: boolean;
  pulsing?: boolean;
}

export const HealthBadge: React.FC<HealthBadgeProps> = ({
  text,
  variant = 'primary',
  size = 'medium',
  onPress,
  style,
  leftIcon,
  rightIcon,
  animated = false,
  pulsing = false,
}) => {
  const badgeStyle = [
    styles.badge,
    styles[size],
    styles[variant],
    style,
  ];

  const textStyle = [
    styles.text,
    styles[`${size}Text`],
    styles[`${variant}Text`],
  ];

  const renderBadge = () => {
    if (animated || pulsing) {
      return (
        <AnimatedBadge
          text={text}
          variant={variant}
          size={size}
          badgeStyle={badgeStyle}
          textStyle={textStyle}
          leftIcon={leftIcon}
          rightIcon={rightIcon}
          pulsing={pulsing}
        />
      );
    }

    return (
      <View style={badgeStyle}>
        {variant === 'achievement' && (
          <LinearGradient
            colors={['#FCD34D', '#F59E0B']}
            style={StyleSheet.absoluteFillObject}
            start={{ x: 0, y: 0 }}
            end={{ x: 1, y: 1 }}
          />
        )}

        <View style={styles.badgeContent}>
          {leftIcon && <View style={styles.leftIcon}>{leftIcon}</View>}
          <Text style={textStyle}>{text}</Text>
          {rightIcon && <View style={styles.rightIcon}>{rightIcon}</View>}
        </View>
      </View>
    );
  };

  if (onPress) {
    return (
      <TouchableOpacity
        activeOpacity={0.8}
        onPress={onPress}
        style={styles.touchable}
      >
        {renderBadge()}
      </TouchableOpacity>
    );
  }

  return renderBadge();
};

// Animated badge component for special effects
interface AnimatedBadgeProps {
  text: string;
  variant: BadgeVariant;
  size: BadgeSize;
  badgeStyle: ViewStyle[];
  textStyle: any[];
  leftIcon?: React.ReactNode;
  rightIcon?: React.ReactNode;
  pulsing: boolean;
}

const AnimatedBadge: React.FC<AnimatedBadgeProps> = ({
  text,
  variant,
  size,
  badgeStyle,
  textStyle,
  leftIcon,
  rightIcon,
  pulsing,
}) => {
  const pulseAnim = React.useRef(new Animated.Value(1)).current;

  React.useEffect(() => {
    if (pulsing) {
      const pulse = Animated.loop(
        Animated.sequence([
          Animated.timing(pulseAnim, {
            toValue: 1.1,
            duration: 1000,
            useNativeDriver: true,
          }),
          Animated.timing(pulseAnim, {
            toValue: 1,
            duration: 1000,
            useNativeDriver: true,
          }),
        ])
      );
      pulse.start();
      return () => pulse.stop();
    }
  }, [pulsing, pulseAnim]);

  return (
    <Animated.View
      style={[
        badgeStyle,
        { transform: [{ scale: pulseAnim }] },
      ]}
    >
      {variant === 'achievement' && (
        <LinearGradient
          colors={['#FCD34D', '#F59E0B']}
          style={StyleSheet.absoluteFillObject}
          start={{ x: 0, y: 0 }}
          end={{ x: 1, y: 1 }}
        />
      )}

      <View style={styles.badgeContent}>
        {leftIcon && <View style={styles.leftIcon}>{leftIcon}</View>}
        <Text style={textStyle}>{text}</Text>
        {rightIcon && <View style={styles.rightIcon}>{rightIcon}</View>}
      </View>
    </Animated.View>
  );
};

