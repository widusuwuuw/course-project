import React from 'react';
import {
  View,
  Text,
  StyleSheet,
  ViewStyle,
  TouchableOpacity,
  Dimensions,
} from 'react-native';
import { LinearGradient } from 'expo-linear-gradient';

const { width: screenWidth } = Dimensions.get('window');

export type ChatBubbleType = 'user' | 'assistant' | 'system';

interface ChatBubbleProps {
  message: string;
  type: ChatBubbleType;
  timestamp?: string;
  isTyping?: boolean;
  onPress?: () => void;
  style?: ViewStyle;
  avatar?: React.ReactNode;
  showAvatar?: boolean;
}

export const ChatBubble: React.FC<ChatBubbleProps> = ({
  message,
  type,
  timestamp,
  isTyping = false,
  onPress,
  style,
  avatar,
  showAvatar = true,
}) => {
  const bubbleStyle = [
    styles.bubble,
    styles[type],
    style,
  ];

  const textStyle = [
    styles.text,
    styles[`${type}Text`],
  ];

  const containerStyle = [
    styles.container,
    type === 'user' ? styles.userContainer : styles.assistantContainer,
  ];

  const renderBubble = () => (
    <View style={containerStyle}>
      {/* Avatar */}
      {showAvatar && (
        <View style={styles.avatarContainer}>
          {avatar || (
            <View style={[styles.defaultAvatar, styles[`${type}Avatar`]]}>
              <Text style={styles.avatarIcon}>
                {type === 'user' ? 'üë§' : 'ü§ñ'}
              </Text>
            </View>
          )}
        </View>
      )}

      {/* Message bubble */}
      <View style={styles.messageSection}>
        <TouchableOpacity
          activeOpacity={0.8}
          onPress={onPress}
          style={bubbleStyle}
          disabled={!onPress}
        >
          {/* Gradient background for assistant messages */}
          {type === 'assistant' && (
            <LinearGradient
              colors={['#F0F9FF', '#E0F2FE']}
              style={StyleSheet.absoluteFillObject}
              start={{ x: 0, y: 0 }}
              end={{ x: 1, y: 1 }}
            />
          )}

          {/* Message content */}
          <View style={styles.bubbleContent}>
            {isTyping ? (
              <TypingIndicator />
            ) : (
              <Text style={textStyle}>{message}</Text>
            )}

            {/* Disclaimer for assistant messages */}
            {type === 'assistant' && !isTyping && (
              <View style={styles.disclaimer}>
                <Text style={styles.disclaimerText}>
                  ‚ö†Ô∏è Êú¨ÂõûÁ≠î‰ªÖ‰æõÂèÇËÄÉÔºå‰∏çËÉΩÊõø‰ª£‰∏ì‰∏öÂåªÁñóÂª∫ËÆÆ
                </Text>
              </View>
            )}
          </View>
        </TouchableOpacity>

        {/* Timestamp */}
        {timestamp && (
          <Text style={[styles.timestamp, styles[`${type}Timestamp`]]}>
            {timestamp}
          </Text>
        )}
      </View>
    </View>
  );

  return renderBubble();
};

// Typing indicator component
const TypingIndicator: React.FC = () => {
  const [dots, setDots] = React.useState('');

  React.useEffect(() => {
    const interval = setInterval(() => {
      setDots(prev => (prev.length >= 3 ? '' : prev + '.'));
    }, 500);

    return () => clearInterval(interval);
  }, []);

  return (
    <View style={styles.typingContainer}>
      <Text style={styles.typingText}>AIÊ≠£Âú®ÊÄùËÄÉ{dots}</Text>
      <View style={styles.typingDots}>
        <View style={[styles.dot, styles.dot1]} />
        <View style={[styles.dot, styles.dot2]} />
        <View style={[styles.dot, styles.dot3]} />
      </View>
    </View>
  );
};

