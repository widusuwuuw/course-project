import React from 'react';
import { View, Text, StyleSheet, ViewStyle } from 'react-native';
import { LinearGradient } from 'expo-linear-gradient';

interface BadgeProps {
  children: React.ReactNode;
  variant?: 'default' | 'secondary' | 'destructive' | 'outline';
  className?: string;
  style?: ViewStyle;
}

export const Badge: React.FC<BadgeProps> = ({
  children,
  variant = 'default',
  className = '',
  style
}) => {
  const getBadgeStyle = (): ViewStyle => {
    const baseStyle: ViewStyle = {
      flexDirection: 'row',
      alignItems: 'center',
      alignSelf: 'flex-start',
      paddingHorizontal: 8,
      paddingVertical: 2,
      borderRadius: 6,
      borderWidth: 1,
    };

    const variantStyles: { [key: string]: ViewStyle } = {
      default: {
        backgroundColor: '#6366F1',
        borderColor: '#6366F1',
      },
      secondary: {
        backgroundColor: '#F1F5F9',
        borderColor: '#E2E8F0',
      },
      destructive: {
        backgroundColor: '#EF4444',
        borderColor: '#EF4444',
      },
      outline: {
        backgroundColor: 'transparent',
        borderColor: '#E2E8F0',
      },
    };

    return { ...baseStyle, ...variantStyles[variant] };
  };

  const getTextStyle = () => {
    const variantStyles = {
      default: {
        color: '#FFFFFF',
      },
      secondary: {
        color: '#0F172A',
      },
      destructive: {
        color: '#FFFFFF',
      },
      outline: {
        color: '#F1F5F9',
      },
    };

    return {
      fontSize: 12,
      fontWeight: '500',
      ...variantStyles[variant as keyof typeof variantStyles],
    };
  };

  return (
    <View style={[getBadgeStyle(), style]}>
      <Text style={getTextStyle()}>
        {children}
      </Text>
    </View>
  );
};

interface GradientBadgeProps extends Omit<BadgeProps, 'variant'> {
  gradientColors?: string[];
}

export const GradientBadge: React.FC<GradientBadgeProps> = ({
  children,
  gradientColors = ['#6366F1', '#8B5CF6'],
  className = '',
  style
}) => {
  return (
    <View style={[styles.gradientBadge, style]}>
      <LinearGradient
        colors={gradientColors}
        start={{ x: 0, y: 0 }}
        end={{ x: 1, y: 1 }}
        style={styles.gradientBadgeInner}
      >
        <Text style={styles.gradientBadgeText}>
          {children}
        </Text>
      </LinearGradient>
    </View>
  );
};

interface StatusBadgeProps {
  status: 'success' | 'warning' | 'error' | 'info';
  children: React.ReactNode;
  style?: ViewStyle;
}

export const StatusBadge: React.FC<StatusBadgeProps> = ({
  status,
  children,
  style
}) => {
  const getStatusColors = () => {
    switch (status) {
      case 'success':
        return { bg: '#10B981', border: '#10B981', text: '#FFFFFF' };
      case 'warning':
        return { bg: '#F59E0B', border: '#F59E0B', text: '#FFFFFF' };
      case 'error':
        return { bg: '#EF4444', border: '#EF4444', text: '#FFFFFF' };
      case 'info':
        return { bg: '#3B82F6', border: '#3B82F6', text: '#FFFFFF' };
      default:
        return { bg: '#6B7280', border: '#6B7280', text: '#FFFFFF' };
    }
  };

  const colors = getStatusColors();

  return (
    <View style={[
      styles.statusBadge,
      {
        backgroundColor: colors.bg,
        borderColor: colors.border,
      },
      style
    ]}>
      <Text style={[styles.statusBadgeText, { color: colors.text }]}>
        {children}
      </Text>
    </View>
  );
};

const styles = StyleSheet.create({
  gradientBadge: {
    borderRadius: 6,
    overflow: 'hidden',
    shadowColor: '#000',
    shadowOffset: { width: 0, height: 1 },
    shadowOpacity: 0.2,
    shadowRadius: 2,
    elevation: 2,
  },
  gradientBadgeInner: {
    flexDirection: 'row',
    alignItems: 'center',
    paddingHorizontal: 8,
    paddingVertical: 2,
  },
  gradientBadgeText: {
    fontSize: 12,
    fontWeight: '600',
    color: '#FFFFFF',
  },
  statusBadge: {
    flexDirection: 'row',
    alignItems: 'center',
    alignSelf: 'flex-start',
    paddingHorizontal: 8,
    paddingVertical: 2,
    borderRadius: 6,
    borderWidth: 1,
  },
  statusBadgeText: {
    fontSize: 12,
    fontWeight: '600',
  },
});

export default {
  Badge,
  GradientBadge,
  StatusBadge,
};