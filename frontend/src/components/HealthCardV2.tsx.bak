import React from 'react';
import {
  View,
  Text,
  TouchableOpacity,
  StyleSheet,
  ViewStyle,
  TextStyle,
} from 'react-native';
import { LinearGradient } from 'expo-linear-gradient';

// Health Card variants similar to 丁香医生 and Keep
export type HealthCardVariant =
  | 'primary'     // Main action cards (like Keep's bright green)
  | 'secondary'   // Secondary actions (light blue)
  | 'tertiary'    // Supportive actions (purple gradient)
  | 'success'     // Success states (emerald)
  | 'warning'     // Warning states (amber)
  | 'danger'      // Alert states (red)
  | 'info';       // Information states (blue)

export type HealthCardSize = 'small' | 'medium' | 'large';

interface HealthCardV2Props {
  title: string;
  subtitle?: string;
  description?: string;
  icon?: React.ReactNode;
  badge?: string;
  variant?: HealthCardVariant;
  size?: HealthCardSize;
  onPress?: () => void;
  disabled?: boolean;
  style?: ViewStyle;
  rightComponent?: React.ReactNode;
  gradient?: boolean;
}

export const HealthCardV2: React.FC<HealthCardV2Props> = ({
  title,
  subtitle,
  description,
  icon,
  badge,
  variant = 'primary',
  size = 'medium',
  onPress,
  disabled = false,
  style,
  rightComponent,
  gradient = true,
}) => {
  const cardStyle = [
    styles.card,
    styles[size],
    styles[variant],
    disabled && styles.disabled,
    style,
  ];

  const renderCard = () => (
    <View style={cardStyle}>
      {/* Background gradient for some variants */}
      {gradient && (variant === 'primary' || variant === 'tertiary') && (
        <LinearGradient
          colors={getGradientColors(variant)}
          style={StyleSheet.absoluteFillObject}
          start={{ x: 0, y: 0 }}
          end={{ x: 1, y: 1 }}
        />
      )}

      {/* Card content */}
      <View style={styles.content}>
        {/* Left side: icon and text */}
        <View style={styles.leftSection}>
          {icon && <View style={styles.iconContainer}>{icon}</View>}
          <View style={styles.textContainer}>
            <View style={styles.titleRow}>
              <Text style={[styles.title, styles[`${variant}Title`]]}>
                {title}
              </Text>
              {badge && (
                <View style={[styles.badge, styles[`${variant}Badge`]]}>
                  <Text style={[styles.badgeText, styles[`${variant}BadgeText`]]}>
                    {badge}
                  </Text>
                </View>
              )}
            </View>
            {subtitle && (
              <Text style={[styles.subtitle, styles[`${variant}Subtitle`]]}>
                {subtitle}
              </Text>
            )}
            {description && (
              <Text style={[styles.description, styles[`${variant}Description`]]}>
                {description}
              </Text>
            )}
          </View>
        </View>

        {/* Right side: additional component */}
        {rightComponent && (
          <View style={styles.rightSection}>{rightComponent}</View>
        )}
      </View>

      {/* Subtle border for some variants */}
      {(variant === 'success' || variant === 'warning' || variant === 'danger') && (
        <View style={[styles.borderLeft, styles[`${variant}Border`]]} />
      )}
    </View>
  );

  if (onPress && !disabled) {
    return (
      <TouchableOpacity
        activeOpacity={0.8}
        onPress={onPress}
        style={styles.touchable}
      >
        {renderCard()}
      </TouchableOpacity>
    );
  }

  return renderCard();
};

// Color schemes inspired by 丁香医生 and Keep
const getGradientColors = (variant: HealthCardVariant): string[] => {
  switch (variant) {
    case 'primary':
      return ['#10B981', '#059669']; // Keep green gradient
    case 'tertiary':
      return ['#6366F1', '#8B5CF6']; // Purple gradient
    default:
      return [];
  }
};

