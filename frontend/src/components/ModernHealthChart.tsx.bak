import React from 'react';
import { View, Text, StyleSheet, Dimensions } from 'react-native';
import { LineChart, Line, AreaChart, Area } from 'react-native-chart-kit';
import { LinearGradient } from 'expo-linear-gradient';

const { width } = Dimensions.get('window');

interface ModernHealthChartProps {
  data: {
    labels: string[];
    datasets: Array<{
      data: number[];
      color?: (opacity: number) => string;
      strokeWidth?: number;
    }>;
  };
  title: string;
  subtitle?: string;
  height?: number;
  color?: string[];
  type?: 'line' | 'area';
}

export const ModernHealthChart: React.FC<ModernHealthChartProps> = ({
  data,
  title,
  subtitle,
  height = 200,
  color = ['#6366F1', '#8B5CF6'],
  type = 'area'
}) => {
  const chartWidth = width - 48; // 考虑左右边距

  const chartConfig = {
    backgroundColor: 'transparent',
    backgroundGradientFrom: 'transparent',
    backgroundGradientTo: 'transparent',
    decimalPlaces: 1,
    color: (opacity = 1) => `rgba(99, 102, 241, ${opacity})`,
    labelColor: (opacity = 1) => `rgba(148, 163, 184, ${opacity})`,
    style: {
      borderRadius: 16,
    },
    propsForDots: {
      r: '3',
      strokeWidth: '2',
      stroke: '#6366F1',
    },
    propsForBackgroundLines: {
      strokeDasharray: '5, 5',
      stroke: 'rgba(148, 163, 184, 0.1)',
    },
  };

  const renderChart = () => {
    if (type === 'line') {
      return (
        <LineChart
          data={data}
          width={chartWidth}
          height={height}
          chartConfig={chartConfig}
          bezier
          style={styles.chart}
          withInnerLines={true}
          withOuterLines={false}
          withVerticalLines={false}
          withHorizontalLines={true}
          segments={4}
        />
      );
    }

    return (
      <AreaChart
        data={data}
        width={chartWidth}
        height={height}
        chartConfig={chartConfig}
        bezier
        style={styles.chart}
        withInnerLines={true}
        withOuterLines={false}
        withVerticalLines={false}
        withHorizontalLines={true}
        segments={4}
        withDots={true}
      />
    );
  };

  return (
    <View style={styles.container}>
      <View style={styles.header}>
        <View>
          <Text style={styles.title}>{title}</Text>
          {subtitle && <Text style={styles.subtitle}>{subtitle}</Text>}
        </View>
        <LinearGradient
          colors={color}
          start={{ x: 0, y: 0 }}
          end={{ x: 1, y: 1 }}
          style={styles.gradientDot}
        />
      </View>
      <View style={styles.chartContainer}>
        {renderChart()}
      </View>
    </View>
  );
};

interface MiniChartProps {
  data: number[];
  color?: string;
  height?: number;
  width?: number;
}

export const MiniChart: React.FC<MiniChartProps> = ({
  data,
  color = '#6366F1',
  height = 60,
  width = 100
}) => {
  const chartData = {
    labels: ['', '', '', '', ''],
    datasets: [{
      data,
    }],
  };

  const chartConfig = {
    backgroundColor: 'transparent',
    backgroundGradientFrom: 'transparent',
    backgroundGradientTo: 'transparent',
    decimalPlaces: 0,
    color: () => color,
    strokeWidth: 2,
    propsForDots: {
      r: '0',
    },
    propsForBackgroundLines: {
      strokeDasharray: '0',
      stroke: 'transparent',
    },
  };

  return (
    <LineChart
      data={chartData}
      width={width}
      height={height}
      chartConfig={chartConfig}
      bezier
      withDots={false}
      withInnerLines={false}
      withOuterLines={false}
      withVerticalLines={false}
      withHorizontalLines={false}
    />
  );
};

const styles = StyleSheet.create({
  container: {
    backgroundColor: 'rgba(30, 41, 59, 0.5)',
    borderRadius: 20,
    padding: 20,
    marginHorizontal: 24,
    marginBottom: 20,
    borderWidth: 1,
    borderColor: 'rgba(255, 255, 255, 0.1)',
  },
  header: {
    flexDirection: 'row',
    justifyContent: 'space-between',
    alignItems: 'center',
    marginBottom: 16,
  },
  title: {
    fontSize: 18,
    fontWeight: '700',
    color: '#F1F5F9',
    marginBottom: 4,
  },
  subtitle: {
    fontSize: 14,
    color: '#94A3B8',
  },
  gradientDot: {
    width: 12,
    height: 12,
    borderRadius: 6,
  },
  chartContainer: {
    borderRadius: 12,
    overflow: 'hidden',
  },
  chart: {
    borderRadius: 12,
  },
});

export default ModernHealthChart;